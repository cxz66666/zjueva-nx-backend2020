@page
@model _2020_backend.Pages.Records.SMSModel
@{
    ViewData["Title"] = "SMS";
}

<h4>发送短信</h4>
<form class="m-2" method="post">
    <input type="hidden" asp-for="Record.rid" />
    <div class="form-group mx-sm-0 mb-2">
        <input asp-for="yuyue" /> 只发送预约时间 <br />
    </div>
    <div class="form-group mx-sm-0 mb-2">
        <input asp-for="queren" />只发送时间确认<br />
    </div>
    <div class="form-group mx-sm-0 mb-2">
        <input asp-for="zuizhong" />只发送面试结果<br />
    </div>
    <div class="form-group mx-sm-0 mb-2">
        <input asp-for="PullResponse" />拉取回复消息<br />
    </div>
    <button type="submit" class="btn btn-outline-primary mb-2">GO!</button>
</form>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">操作记录</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var note in Model.AboutSMS)
            {
                <tr>
                    <td>@(note.OperatorName +" 发送了" +note.type+"于" + note.sendTime.ToString("MM-dd HH:mm")+" --状态为"+(note.Status==1?"成功":"失败"))</td>
                </tr>
            }

        </tbody>
    </table>
</div>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            面试场次编号
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Record.InterviewID)
        </dd>
        <dt class="col-sm-2">
            面试场次
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Record.InterviewTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Record.status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Record.status)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Record.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Record.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Record.phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Record.phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Record.id_student)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Record.id_student)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Record.strguid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Record.strguid)
        </dd>


    </dl>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">回复记录</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var note in Model.ResponseSMS)
            {
                <tr>
                    <td>@($"该同学回复到:  {note.OperatorName}  于{note.sendTime.ToString("MM-dd HH:mm")}")</td>
                </tr>
            }

        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Record.rid">Edit</a> |
    <a asp-page="./Index">回到首页</a>|
</div>
